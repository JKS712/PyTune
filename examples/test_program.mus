// 設定速度為 120 BPM
tempo 120

// 播放單個音符
note "C4"
note "D4", 1.5
note "E4", 0.5

// 播放和弦
chord ["C4", "E4", "G4"]
chord ["F4", "A4", "C5"], 2.0

// 使用變數
melody = "G4"
bass = "C3"

// 簡單的迴圈 - 重複播放3次
loop 3 {
    note "A4"
    note "B4"
    note "C5"
}

// 複雜一點的迴圈 - 包含和弦
loop 2 {
    chord ["C4", "E4", "G4"], 1.0
    chord ["F4", "A4", "C5"], 1.0
    note "G4", 2.0
}

// 數學運算測試
tempo 60 + 60
duration = 1.0 * 2

// 綜合測試 - 一個簡單的旋律
tempo 100
note "C4", 0.5
note "D4", 0.5  
note "E4", 0.5
note "F4", 0.5
chord ["C4", "E4", "G4"], 1.0

loop 4 {
    note "G4", 0.25
    note "A4", 0.25
    note "B4", 0.5
}